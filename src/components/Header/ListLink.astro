---
const { text, ariaLabel } = Astro.props;
---

<li class="list-link">
  <a href="#" aria-label={ariaLabel} class="list-link__link">
    <span class="list-link__link-text">{text}</span>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="currentColor"
      class="list-link__arrow"
      height={20}
      width={20}
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="m8.25 4.5 7.5 7.5-7.5 7.5"></path>
    </svg>
  </a>
</li>

<style lang="scss">
  .list-link {
    padding: 6px 0;

    &__link {
      text-decoration: none;
      color: var(--primary);
      font-weight: 600;
      font-size: 20px;
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      @media (min-width: 768px) {
        color: var(--secondary);
        font-weight: 200;
        font-size: 18px;
        transition: all 0.3s ease;
        padding: 4px 8px;
        border-radius: 4px;
        &:hover,
        &:focus-within {
          background-color: hsla(0, 0%, 100%, 0.3);
          padding: 4px 8px;
        }
      }
    }

    &__link-text {
      display: block;
    }

    &__arrow {
      height: 20px;
      width: 20px;
      @media (min-width: 768px) {
        display: none;
      }
    }
  }
</style>